<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/write_A_Word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write a Word"
        android:inputType="text"
        />

    <Button
        android:id="@+id/lowerCaseButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOWER CASE"
        />

    <Button
        android:id="@+id/upperCaseButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UPPER CASE" />
    <Button
        android:id="@+id/capitalizeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CAPITALIZE" />
    <Button
        android:id="@+id/reverseButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REVERSE" />

    <TextView
        android:id="@+id/Text_View_Message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Hello World!"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</LinearLayout>